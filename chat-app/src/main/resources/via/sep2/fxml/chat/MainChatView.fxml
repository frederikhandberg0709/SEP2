<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane
    xmlns="http://javafx.com/javafx/11.0.1"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="via.sep2.client.view.chat.MainChatViewController"
>

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="360.0" styleClass="sidebar">
            <!-- Header with user profile and logout -->
            <HBox
                alignment="CENTER_LEFT"
                spacing="10.0"
                styleClass="sidebar-header"
            >
                <padding>
                    <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
                </padding>

                <!-- User Info Section -->
                <HBox
                    alignment="CENTER_LEFT"
                    spacing="12.0"
                    HBox.hgrow="ALWAYS"
                >
                    <Label
                        fx:id="userAvatarLabel"
                        styleClass="user-avatar"
                        text="JD"
                    />
                    <Label
                        fx:id="userNameLabel"
                        styleClass="user-name"
                        text="John Doe"
                    >
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </HBox>

                <!-- Logout Button -->
                <Button
                    fx:id="logoutButton"
                    onAction="#onLogout"
                    styleClass="logout-btn"
                    text="Logout"
                />
            </HBox>

            <!-- Search Bar -->
            <VBox spacing="16.0">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>

                <TextField
                    fx:id="searchField"
                    promptText="Search conversations..."
                    styleClass="search-input"
                    onKeyReleased="#onSearchChanged"
                />

                <!-- Chat Filter Buttons -->
                <HBox spacing="8.0">
                    <ToggleButton
                        fx:id="allChatsFilter"
                        onAction="#onFilterChanged"
                        styleClass="filter-btn"
                        text="All"
                        selected="true"
                    >
                        <toggleGroup>
                            <ToggleGroup fx:id="chatFilterGroup" />
                        </toggleGroup>
                    </ToggleButton>
                    <ToggleButton
                        fx:id="directChatsFilter"
                        onAction="#onFilterChanged"
                        styleClass="filter-btn"
                        text="Direct"
                        toggleGroup="$chatFilterGroup"
                    />
                    <ToggleButton
                        fx:id="groupChatsFilter"
                        onAction="#onFilterChanged"
                        styleClass="filter-btn"
                        text="Group"
                        toggleGroup="$chatFilterGroup"
                    />
                </HBox>
            </VBox>

            <!-- Chat List -->
            <ListView
                fx:id="chatListView"
                VBox.vgrow="ALWAYS"
                styleClass="chat-list"
            >
                <padding>
                    <Insets left="8.0" right="8.0" top="8.0" />
                </padding>
            </ListView>
        </VBox>
    </left>

    <!-- Main chat area -->
    <center>
        <VBox fx:id="chatMainArea" styleClass="chat-main">
            <!-- Chat Header -->
            <HBox
                fx:id="chatHeader"
                alignment="CENTER_LEFT"
                spacing="12.0"
                styleClass="chat-header"
                visible="false"
            >
                <padding>
                    <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
                </padding>

                <Label
                    fx:id="chatHeaderAvatar"
                    styleClass="chat-header-avatar"
                    text="A"
                />
                <VBox>
                    <Label
                        fx:id="chatHeaderName"
                        styleClass="chat-header-name"
                        text="Alice Johnson"
                    >
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Label
                        fx:id="chatHeaderStatus"
                        styleClass="chat-header-status"
                        text="Active 2 minutes ago"
                    />
                </VBox>
            </HBox>

            <!-- Messages Area -->
            <ScrollPane
                fx:id="messagesScrollPane"
                fitToWidth="true"
                VBox.vgrow="ALWAYS"
                styleClass="messages-scroll"
                visible="false"
            >
                <VBox
                    fx:id="messagesContainer"
                    spacing="8.0"
                    styleClass="messages-container"
                >
                    <padding>
                        <Insets
                            bottom="16.0"
                            left="20.0"
                            right="20.0"
                            top="16.0"
                        />
                    </padding>
                </VBox>
            </ScrollPane>

            <!-- Message Input Area -->
            <HBox
                fx:id="messageInputArea"
                alignment="CENTER"
                spacing="12.0"
                styleClass="message-input-area"
                visible="false"
            >
                <padding>
                    <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
                </padding>

                <TextField
                    fx:id="messageInput"
                    promptText="Type a message..."
                    HBox.hgrow="ALWAYS"
                    styleClass="message-input"
                    onKeyPressed="#onMessageInputKeyPressed"
                />
                <Button
                    fx:id="sendButton"
                    onAction="#onSendMessage"
                    styleClass="send-btn"
                    text="Send"
                />
            </HBox>

            <!-- Welcome/Empty State -->
            <VBox
                fx:id="emptyStateArea"
                alignment="CENTER"
                spacing="16.0"
                styleClass="empty-state"
                VBox.vgrow="ALWAYS"
            >
                <Label
                    styleClass="empty-state-title"
                    text="Select a conversation"
                >
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label
                    styleClass="empty-state-subtitle"
                    text="Choose from your existing conversations or start a new one"
                />
            </VBox>
        </VBox>
    </center>
</BorderPane>
